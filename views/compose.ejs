
<%- include("partials/header.ejs") %>

<div>
  <h1>Compose</h1>

  <form action="/compose" method="post">
    <div class="form-group">
      <!-- Post Title -->
      <label for="postTitle">Title</label>
      <input class="form-control" id="postTitle" type="text" name="postTitle">

      <!-- Post Body -->
      <label for="postBody">Post</label>
      <textarea class="form-control" type="text" name="postBody" id="postBody" rows="5" cols="30"></textarea>
    </div>

    <button class="btn btn-primary" type="submit" name="button">Publish</button>
  </form>

</div>

