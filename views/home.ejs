
<%- include("partials/header.ejs") %>
<h1>Home</h1>

<p><%= homeStartingContent %></p>

<% posts.forEach((post) => { %>

  <% let url = "/posts/" + post._id %>
  <h1><%= post.postTitle %></h1>

  <% if(post.postBody.length > 99) { %>
    <p><%= post.postBody.substring(0, 99) + "..." %>
      <a href= "<%= url %>">Read More</a>
    </p>

  <% } else { %>
    <p><%= post.postBody %></p>
  <% } %>

<% }); %>

<%- include("partials/footer.ejs") %>
